<h1>Post New Question</h1>
<%= form_with(model: @question) do |f| %>
  <%= render "shared/error_messages", resource: f.object %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Post" %>
  </div>
<% end %>
