<h1>Post New Question</h1>
<%= form_with(model: @question, local: true) do |f| %>
  <%= render "shared/error_messages", resource: f.object %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %><br />
    <%= f.text_field :title, class: "form-control", autofocus: true %>
  </div>

  <div class="mb-3">
    <%= f.label :content, class: "form-label" %><br />
    <%= f.text_area :content, class: "form-control", rows: 10, autofocus: true %>
  </div>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
